<Window x:Class="ModernUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ModernUI"
        xmlns:viewModel ="clr-namespace:ModernUI.MVVM.Viewmodel"
        mc:Ignorable="d"
        Title="TwitchBotUI" 
        Height="600" 
        Width="920"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="Transparent"
        AllowsTransparency="True" MouseDown="Window_MouseDown" MouseMove="Window_MouseMove">

    <Window.DataContext>
        <viewModel:MainViewModel/>
    </Window.DataContext>
    
    <Border Background="#272537" CornerRadius="20">
        <Grid MouseDown="Grid_MouseDown">
            <Grid.ColumnDefinitions>
                
                <ColumnDefinition Width="200">
                
                </ColumnDefinition>
                
                <ColumnDefinition>

                </ColumnDefinition>
                
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height ="75"/>
                <RowDefinition/>

            </Grid.RowDefinitions>

            <TextBlock Text="BotUI"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Left"
                       Foreground="WhiteSmoke"
                       FontSize= "22"
                       Margin="20, 0, 0, 0"/>


            <StackPanel Grid.Row="1">
                
                <RadioButton Content="Home"
                             
                             Height="50"
                             Foreground="White"
                             FontSize="18"
                             Command="{Binding HomeViewCommand}"
                             Style="{StaticResource MenuButtonTheme}"/>
                
                
                <RadioButton Content="Chat"
                             Height="50"
                             Foreground="White"
                             FontSize="18"
                             Command="{Binding ChatViewCommand}"
                             Style="{StaticResource MenuButtonTheme}"/>
                
                
                <RadioButton Content="Bot"
                             Height="50"
                             Foreground="White"
                             FontSize="18"
                             Command="{Binding BotViewCommand}"
                             Style="{StaticResource MenuButtonTheme}"/>
                
            </StackPanel>


            <TextBox x:Name="MainTextBox" Width="250"
                     Height="40"
                     VerticalContentAlignment="Center"
                     HorizontalAlignment="Left"
                     Margin="5"
                     Grid.Column="1"
                     Style="{StaticResource ModernTextBox}" TextChanged="MainTextBox_TextChanged">
                
            </TextBox>

            <ContentControl Grid.Row="1" Grid.Column="1"
                            Margin="10"
                            Content="{Binding CurrentView}"
                            >
                
            </ContentControl>
            

        </Grid>

            

    </Border>
</Window>
